generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name  String   @unique
  email  String   @unique 
  password  String
  telephone  String @unique
  role      Role
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
  AMBULANCE
  POLICE
}
